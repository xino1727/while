using namespace std;
#include <iostream>

int main()
{
    int bebra=1;
    int goat=0;
    int ronaldo=0;
    while (bebra != 0) {
        cout<<"enternum: ";
        cin >> bebra;
        goat = goat + bebra;
        ronaldo++;
    }
    ronaldo = ronaldo - 1;
    cout << "sum= " << goat << endl;
    cout << "num= " << ronaldo;
}
